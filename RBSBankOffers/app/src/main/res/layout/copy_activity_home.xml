<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Account"
        android:id="@+id/currentAccLbl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textColor="#d81031"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Savings Account"
        android:id="@+id/savingsAccLbl"
        android:padding="5dp"
        android:textColor="#d81031"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/currentAccBalanceAmtTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$ 1,233,545.32"
        android:id="@+id/savingsAccBalanceAmtTxt"
        android:layout_below="@+id/savingsAccLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10029639 - 12345"
        android:id="@+id/currentAccNumberTxt"
        android:layout_below="@+id/currentAccLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Available Balance"
        android:id="@+id/currentAccBalanceLbl"
        android:padding="5dp"
        android:textColor="#d81031"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_below="@+id/currentAccNumberTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$ 23,143"
        android:id="@+id/currentAccBalanceAmtTxt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/currentAccBalanceLbl"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10278666 - 12345"
        android:id="@+id/savingsAccNumberTxt"
        android:layout_below="@+id/savingsAccLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Available Balance"
        android:id="@+id/savingsAccBalanceLbl"
        android:padding="5dp"
        android:textColor="#d81031"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_below="@+id/savingsAccNumberTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearByAtmBtn"
        android:src="@drawable/rbs_btn_ic_atm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saleOfferBtn"
        android:src="@drawable/rbs_btn_ic_sale_offer"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nearByAtmBtn"
        android:layout_toEndOf="@+id/nearByAtmBtn"
        android:layout_alignTop="@+id/nearByAtmBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loanBtn"
        android:src="@drawable/rbs_btn_ic_loan"
        android:layout_alignRight="@+id/savingsAccBalanceAmtTxt"
        android:layout_alignEnd="@+id/savingsAccBalanceAmtTxt"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/saleOfferBtn" />

</RelativeLayout>
